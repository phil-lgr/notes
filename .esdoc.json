{
  "source": "./src",
  "destination": "./docs",
  "index": "./README.md",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {
          "enable": true
        },
        "coverage": {
          "enable": true
        },
        "accessor": {
          "access": [
            "public",
            "protected",
            "private"
          ],
          "autoPrivate": true
        },
        "undocumentIdentifier": {
          "enable": true
        },
        "unexportedIdentifier": {
          "enable": false
        },
        "typeInference": {
          "enable": true
        },
        "manual": {
          "index": "./src/index.md",
          "asset": "./assets",
          "files": [
            "./src/javascript/ES5.md",
            "./src/javascript/ES6.md",
            "./src/javascript/fp.md"
          ]
        }
      }
    }
  ]
}
